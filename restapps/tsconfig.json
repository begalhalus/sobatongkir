{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
   },
   "include": [
      "./src/**/*", "src/entity/.ts"  ],
  "exclude": [
      "node_modules"
  ]
}